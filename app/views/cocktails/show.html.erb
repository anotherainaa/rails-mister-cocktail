<div class="container">


  <div class="card-cocktail-description">
    <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.url(:standard)  %>
    <% end %>
    <h1><%= @cocktail.name %></h1>


    <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
    </ul>
  </div>


  <div class=card-add-description>
  <h3>Add a dose..</h3>
  <%= render 'doses/form' %>
  </div>

<%#= link_to "Add Doses", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

<p><%= link_to "Back", cocktails_path, class: "btn btn-default" %></p>

</div>


